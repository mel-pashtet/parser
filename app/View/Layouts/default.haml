!!!
%html
	%head
		%title= $title_for_layout
		= $this->Html->charset('utf-8');
		%meta{ :content => "", :name => "description" }
		%meta{ :content => "", :name => "author" }
		= $this->Html->script(array('https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js'));
		// = $this->Html->script(array('parser'));

	= $this->Html->css('main')
	// = $this->Html->css('cake.generic')
	= $this->fetch('css')
	= $this->fetch('script')
	%body
		#header
			CakePHP
		#container
			.left-panel
				:php
					echo $this->Html->link('Спарсить в базу',
						array(
							'controller' => 'site',
							'action' => 'index',
							'full_base' => true
						));
					echo $this->Html->link('Просмотреть базу',
						array(
							'controller' => 'items',
							'action' => 'listItems',
							'full_base' => true
						));
			.right-panel
				= $this->Session->flash()
				= $this->fetch('content')

		#footer
			// = $this->element('sql_dump');
			= $this->Html->link($this->Html->image('cake.power.gif'), 'http://www.cakephp.org/', array('target' => '_blank', 'escape' => false))